<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hl.myblog.dao.TagMapper">
    <select id="queryAll" resultType="com.hl.myblog.po.Tag">
        select 
            * 
        from 
            t_tag
    </select>
    <select id="queryById" resultType="com.hl.myblog.po.Tag">
        select 
            * 
        from 
            t_tag 
        where 
            id = #{id}
    </select>
    <select id="queryByName" resultType="com.hl.myblog.po.Tag">
        select 
            * 
        from 
            t_tag 
        where 
            name = #{name}
    </select>
    <select id="queryByIds" resultType="com.hl.myblog.po.Tag">
        select 
            *
        from 
            t_tag
        where
            <foreach item="id" index="index" collection="ids" separator="and" >
                id = #{id}
            </foreach>
    </select>
    <insert id="add">
        insert into 
            t_tag (name) 
            values(#{name})
    </insert>
    <update id="update">
        update 
            t_tag 
        set 
            name = #{name} 
        where 
            id = #{id}
    </update>
    <delete id="delete">
        delete from 
            t_tag 
        where 
            id = #{id}
    </delete>
</mapper>